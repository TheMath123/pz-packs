{
  "name": "monorepo-template",
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@org/linter": "workspace:*",
    "@types/bun": "catalog:",
    "turbo": "2.7.1",
    "typescript": "5.9.3"
  },
  "packageManager": "bun@1.3.3",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "preview": "turbo run preview",
    "type:check": "turbo type:check",
    "docker:up": "turbo run docker:up",
    "docker:down": "turbo run docker:down",
    "db:studio": "turbo run db:studio",
    "format": "biome format",
    "lint": "biome lint",
    "check": "biome check",
    "check:write": "biome check --write .",
    "build:envs": "bun run scripts/build-envs.ts",
    "delete:modules": "bun run scripts/delete-node-modules.ts"
  },
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "react": "19.2.3",
      "react-dom": "19.2.3",
      "tailwindcss": "4.1.17",
      "@types/bun": "1.3.4",
      "@types/react": "19.2.7",
      "@types/react-dom": "19.2.3",
      "@tanstack/react-form": "1.27.1",
      "date-fns": "4.1.0"
    }
  }
}
